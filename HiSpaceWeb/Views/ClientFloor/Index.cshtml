@model IEnumerable<HiSpaceModels.ClientFloor>

@{
    ViewBag.Title = "Floor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- begin app-main -->
<div class="app-main" id="main">
	<!-- begin container-fluid -->
	<div class="container-fluid">
		<!-- begin row -->
		<div class="row">
			<div class="col-md-12 m-b-20">
				<!-- begin page title -->
				<div class="d-block d-sm-flex flex-nowrap align-items-center">
					<div class="page-title mb-2 mb-sm-0">
						<h1>Client Floor<span class="action-text"></span></h1>
					</div>
					<div class="cr-floor">Step 2. <span>Add Floor <i class="fa fa-building" aria-hidden="true"></i></span> </div>
					<div class="ml-auto d-flex align-items-center">
						<nav>
							<ol class="breadcrumb p-0 m-b-0">
								<li class="breadcrumb-item">
									<a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
								</li>
								<li class="breadcrumb-item">
									<a href="@Url.Action( "Index","ClientLocation")">Client Location</a>
								</li>
								<li class="breadcrumb-item active text-primary" aria-current="page">Client Floor</li>
							</ol>
						</nav>
					</div>
				</div>
				<!-- end page title -->

				<!--Form wizard start-->
				<div class="wizard">
					<div class="wizard-inner">
						<div class=""></div>
						<ul class="nav nav-tabs" role="tablist">

							<li role="presentation" class="">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-map-marker" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Location</div>
							</li>

							<li role="presentation" class="active">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-building" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Floor</div>
							</li>
							<li role="presentation" class="">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-pie-chart" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Space</div>
							</li>

						</ul>
					</div>
				</div>
				<!--Form wizard end-->
			</div>
		</div>
		<!-- end row -->
		<!-- begin row -->
		<!--Floor table view-->
		<div class="row" id="table_view">
			<div class="col-lg-12">
				<div class="card card-statistics">
					<div class="card-body">
						<div class="datatable-wrapper table-responsive">
							<a href="@Url.Action( "Create","ClientFloor", new { ClientLocationID = ViewBag.ClientLocationID } ) ">
							<div id="show_add_view" class="add-new tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Click to add">
								<i class="fa fa-plus"></i>
							</div>
								</a>
							<table id="clientLocationTable" class="display compact table table-striped mdtable">
								<thead>
									<tr>
										<th>F-ID.</th>
										<th>Name</th>
										<th>Floor No</th>
										<th>Ameneites Price</th>
										<th>Status</th>
										<th><i class="fa fa-pie-chart mr--5"> </i>Space</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										@if (item.Active)
                                        {
                                            ViewBag.Status = "text-success fa fa-check btn btn-icon icon-status";
                                        }
                                        else
                                        {
                                            ViewBag.Status = "text-danger fa fa-ban btn btn-icon icon-status";
                                        }
									<tr>
										<td>@Html.DisplayFor(modelItem => item.ClientFloorID)</td>
										<td>@Html.DisplayFor(modelItem => item.FloorName)</td>
										<td>@Html.DisplayFor(modelItem => item.FloorNumber)</td>
										<td>@Html.DisplayFor(modelItem => item.PaidAmenitiesPrice)</td>
										<td>
                                            <div class="ml-auto d-flex align-items-center secondary-menu text-center md-crud-menu">
                                                <i class="@ViewBag.Status"></i>
                                            </div>
                                        </td>
										<td class="p-0">
											<div class="ml-auto d-flex align-items-center secondary-menu text-center md-crud-menu">

												<a href="@Url.Action("Index", "ClientSpace", new { ClientLocationID = ViewBag.ClientLocationID, ClientFloorID = item.ClientFloorID })" class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Space inside the Floor">
                                                        <i class="fa fa-pie-chart btn btn-icon" aria-hidden="true"></i></a>
											</div>
										</td>
										<td class="p-0">
											<div class="ml-auto d-flex align-items-center secondary-menu text-center md-crud-menu">
												<a href="@Url.Action( "Display","ClientFloor",new { ClientLocationID = item.ClientLocationID, ClientFloorID = item.ClientFloorID })" class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="View">
													<i class="fa fa-eye btn btn-icon "></i>
												</a>
												<a href="@Url.Action( "Edit","ClientFloor",new { ClientLocationID = item.ClientLocationID, ClientFloorID = item.ClientFloorID })" class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
													<i class="fa fa-pencil-square-o btn btn-icon "></i>
												</a>												
											</div>
										</td>
									</tr>
									}
								</tbody>
								<tfoot>
									<tr>
										<th>F-ID.</th>
										<th>Name</th>
										<th>Type</th>
										<th>No.of.Seats</th>
										<th>Status</th>
										<th>Space</th>
										<th>Action</th>
									</tr>
								</tfoot>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>