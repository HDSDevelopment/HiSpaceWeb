@model HiSpaceModels.HolidayMaster

@{
    ViewBag.Title = "Holiday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-10">
                <!-- begin page title -->
                <div class="d-block d-sm-flex flex-nowrap align-items-center">
                    <div class="page-title mb-2 mb-sm-0">
                        <h1>Holiday <span class="action-text"> - Create</span></h1>
                    </div>
                    <div class="ml-auto d-flex align-items-center">
                        <nav>
                            <ol class="breadcrumb p-0 m-b-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
                                </li>
                                <li class="breadcrumb-item active text-primary" aria-current="page">Holiday</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end page title -->
            </div>
        </div>
        <!-- end row -->

        @using (Html.BeginForm("Create", "Holiday", FormMethod.Post, new { id = "", @class = "md-form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row" id="add_view">
                <div class="col-12 mb-3">
                    <p><a href="@Url.Action( "Index","Holiday")" class="go-to-table"> <i class="fa fa-angle-left" aria-hidden="true"></i> <span>Go Back</span></a></p>
                </div>

                <div class="col-12 tabs-contant">
                    <div class="">
                        <div class="tab round">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active show" id="head-1" data-id="1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"> <span>1.</span> Information </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card card-statistics">
                            <div class="card-body">
                                <div class="tab round">
                                    <div class="tab-content">
                                        <!--tab 1-->
                                        <div class="tab-pane fade active show" id="tab-1" role="tabpanel" aria-labelledby="head-1">

                                            <!--row 1-->
                                            <div class="row">
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    @*<div class="form-group">
                                                            <input type="date" id="e_from_date" placeholder="12/12/1999" />
                                                            <label class="control-label" for="e_from_date">Date of Joining</label>
                                                            <i class="bar"></i>
                                                        </div>*@

                                                    @Html.HiddenFor(m => m.HolidayID)

                                                    <div class="form-group">
                                                        <div class='input-group date' id='e_joindate'>
                                                            @Html.EditorFor(m => m.HolidayDate, new { htmlAttributes = new { @placeholder = "DD-MM-YYYY", @class = "form-control flex-1", @type = "text" } })
                                                            @*<input type='text' class="form-control flex-1" id="e_joining_date" />*@
                                                            <span class="input-group-addon">
                                                                <span class="glyphicon glyphicon-calendar"></span>
                                                            </span>
                                                        </div>
                                                        <label class="control-label date-form-control" for="e_to_date">Holiday Date</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.HolidayDetails, new { htmlAttributes = new { @placeholder = "Holiday Name", @class = "" } })
                                                        <label class="control-label" for="e_id">Holiday Name</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card card-statistics">
                            <div class="card-body">
                                <div class="row hi-btn-event">
                                    <div class="col-12">
                                        <input href="javascript:void(0);" onclick="tabNavigation(2);" type="submit" class="btn btn-success text-uppercase tab-submit float-right" value="Submit" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>