@{
	ViewBag.Title = "Employee Upload";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- begin app-main -->
<div class="app-main" id="main">
	<!-- begin container-fluid -->
	<div class="container-fluid">
		<!-- begin row -->
		<div class="row">
			<div class="col-md-12 m-b-10">
				<!-- begin page title -->
				<div class="d-block d-sm-flex flex-nowrap align-items-center">
					<div class="page-title mb-2 mb-sm-0">
						<h1>Employee <span class="action-text"> - Upload</span></h1>
					</div>
					<div class="ml-auto d-flex align-items-center">
						<nav>
							<ol class="breadcrumb p-0 m-b-0">
								<li class="breadcrumb-item">
									<a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
								</li>
								<li class="breadcrumb-item active text-primary" aria-current="page">Employee Upload</li>
							</ol>
						</nav>
					</div>
				</div>
				<!-- end page title -->
			</div>
		</div>
		<!-- end row -->

		@using (Html.BeginForm("OnPostImport", "Employee", FormMethod.Post, new { id = "", @class = "md-form", enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()
			<div class="row bulkUpload" id="add_view">
				<div class="col-lg-4 col-md-6 col-sm-6 col-12">
					<h5 class="text-center">Export Template</h5>
					<div class="row upload-section">
						<div class="col-lg-12 col-sm-12 col-12">
							<button type="button" class="btn btn-primary text-uppercase" value="Upload" asp-page-handler="Export"><i class="nav-icon fa fa-download"> </i> Download</button>
							<span class="help-block">
								Template format for upload
							</span>
						</div>
					</div>
				</div>
				<div class="col-lg-8 col-sm-12 col-md-12 col-12">
					<h5 class="text-center">Import Employee</h5>
					<div class="row upload-section">
						<div class="col-lg-8 col-sm-8 col-12">
							<div class="input-group cursor-no-drop">
								<label class="input-group-btn cursor-pointer">
									<span class="btn btn-primary">
										Browse&hellip; <input id="fUpload" type="file" style="display: none;">
									</span>
								</label>
								<input type="text" name="files" class="form-control" readonly>
							</div>
							<span class="help-block">
								Select the file extension '.xls .xlsx'
							</span>
						</div>
						<div class="col-lg-4 col-sm-4 col-12">
							<a href="javascript:void(0);" type="button" id="empUpload" class="btn btn-primary text-uppercase" value="Upload"><i class="nav-icon fa fa-upload"> </i> Upload</a>
						</div>
					</div>
				</div>
			</div>

		}
	</div>
</div>