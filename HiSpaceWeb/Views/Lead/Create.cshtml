@model HiSpaceModels.Lead

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- begin app-main -->
<div class="app-main" id="main">
	<!-- begin container-fluid -->
	<div class="container-fluid">
		<!-- begin row -->
		<div class="row">
			<div class="col-md-12 m-b-10">
				<!-- begin page title -->
				<div class="d-block d-sm-flex flex-nowrap align-items-center">
					<div class="page-title mb-2 mb-sm-0">
						<h1>Client <span class="action-text"> - Create</span></h1>
					</div>
					<div class="ml-auto d-flex align-items-center">
						<nav>
							<ol class="breadcrumb p-0 m-b-0">
								<li class="breadcrumb-item">
									<a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
								</li>
								<li class="breadcrumb-item active text-primary" aria-current="page">Lead</li>
							</ol>
						</nav>
					</div>
				</div>
				<!-- end page title -->
			</div>
		</div>
		<!-- end row -->

		@using (Html.BeginForm("Create", "Lead", FormMethod.Post, new { id = "", @class = "md-form", enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()
			<div class="row" id="add_view">
				<div class="col-12 mb-3">
					<p><a href="@Url.Action( "Index","Lead")" class="go-to-table"> <i class="fa fa-angle-left" aria-hidden="true"></i> <span>Go Back</span></a></p>
				</div>

				<div class="col-12 tabs-contant">
					<div class="">
						<div class="tab round">
							<ul class="nav nav-tabs hi-tab" role="tablist">
								<li class="nav-item">
									<a class="nav-link active show" id="head-1" data-id="1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"> <span>1.</span> Basic </a>
								</li>
								<li class="nav-item cursor-no-drop">
									<a class="nav-link pointer-event-none" id="head-2" data-id="2" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false"><span>2.</span> Details </a>
								</li>
							</ul>
						</div>
						<div class="card card-statistics">
							<div class="card-body">
								<div class="tab round">
									<div class="tab-content">
										<!--tab 1-->
										<div class="tab-pane fade active show" id="tab-1" role="tabpanel" aria-labelledby="head-1">
											<!--row 1-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">

														@Html.EditorFor(m => m.LeadName, new { htmlAttributes = new { @placeholder = "Enter Name", @class = "required-input" } })
														@Html.LabelFor(m => m.LeadName, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
													@*<span class="hi-error d-none">Name is required</span>*@
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Phone, new { htmlAttributes = new { type = "number", @placeholder = "9999999999", @maxlength = "10", @class = "required-input" } })
														@Html.LabelFor(m => m.Phone, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
													@*<span class="hi-error d-none">Number is required</span>*@
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Email, new { htmlAttributes = new { type = "email", @placeholder = "text@abc.com" } })
														@Html.LabelFor(m => m.Email, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Address, new { htmlAttributes = new { @placeholder = "Flat:no, street Name" } })
														@Html.LabelFor(m => m.Address, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
											<!--row 2-->
											<div class="row">

												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.City, new { htmlAttributes = new { @placeholder = "City name" } })
														@Html.LabelFor(m => m.City, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.State, new { htmlAttributes = new { @placeholder = "State name" } })
														@Html.LabelFor(m => m.State, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Country, new { htmlAttributes = new { @placeholder = "Country name" } })
														@Html.LabelFor(m => m.Country, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Pincode, new { htmlAttributes = new { @placeholder = "000000", @maxlength = "6" } })
														@Html.LabelFor(m => m.Pincode, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
										<!--tab 2-->
										<div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="head-2">
											<!--row 1-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Aadhaar, new { htmlAttributes = new { @placeholder = "ASDF123123" } })
														@Html.LabelFor(m => m.Aadhaar, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.SpaceType, new { htmlAttributes = new { @placeholder = "Type" } })
														@Html.LabelFor(m => m.SpaceType, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.TotalEmployee, new { htmlAttributes = new { type = "number", @placeholder = "00" } })
														@Html.LabelFor(m => m.TotalEmployee, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.TotalSeat, new { htmlAttributes = new { type = "number", @placeholder = "00" } })
														@Html.LabelFor(m => m.TotalSeat, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
											<!--row 2-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Description, new { htmlAttributes = new { @placeholder = "Enter your text here ..." } })
														@Html.LabelFor(m => m.Description, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card card-statistics">
							<div class="card-body">
								<div class="row hi-btn-event">
									<div class="col-12">
										<a href="javascript:void(0);" onclick="tabNavigation(0);" class="btn btn-primary text-uppercase tab-back-btn">Back</a>
										<a href="javascript:void(0);" onclick="tabNavigation(1);" class="btn btn-primary text-uppercase tab-next-btn float-right">Next</a>
										<input href="javascript:void(0);" onclick="tabNavigation(2);" type="submit" class="btn btn-success text-uppercase tab-submit float-right" value="Submit" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>