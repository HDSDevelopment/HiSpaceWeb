@model HiSpaceModels.ClientLocation

@{
	ViewBag.Title = "Location";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "ClientLocation", FormMethod.Post, new { id = "", @class = "md-form", enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<!-- begin app-main -->
	<div class="app-main" id="main">
		<!-- begin container-fluid -->
		<div class="container-fluid">
			<!-- begin row -->
			<div class="row">
				<div class="col-md-12 m-b-20">
					<!-- begin page title -->
					<div class="d-block d-sm-flex flex-nowrap align-items-center">
						<div class="page-title mb-2 mb-sm-0">
							<h1>Client Location<span class="action-text"> - Edit</span></h1>
						</div>
						<div class="cr-location">Step 1. <span>Create Location <i class="fa fa-map-marker" aria-hidden="true"></i></span> </div>
						<div class="ml-auto d-flex align-items-center">
							<nav>
								<ol class="breadcrumb p-0 m-b-0">
									<li class="breadcrumb-item">
										<a href="@Url.Action("Index", "Home")"><i class="ti ti-home"></i></a>
									</li>
									<li class="breadcrumb-item">
										<a href="@Url.Action("Index", "ClientLocation")">Client Location</a>
									</li>
									<li class="breadcrumb-item active text-primary" aria-current="page">Edit</li>
								</ol>
							</nav>
						</div>
					</div>
					<!-- end page title -->

					<!--Form wizard start-->
				<div class="wizard">
					<div class="wizard-inner">
						<div class=""></div>
						<ul class="nav nav-tabs" role="tablist">

							<li role="presentation" class="active">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-map-marker" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Location</div>
							</li>

							<li role="presentation" class="">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-building" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Floor</div>
							</li>
							<li role="presentation" class="">
								<a href="JavaScript:Void(0);">
									<span class="round-tab">
										<i class="fa fa-pie-chart" aria-hidden="true"></i>
									</span>
								</a>
								<div class="wz-location">Space</div>
							</li>

						</ul>
					</div>
				</div>
				<!--Form wizard end-->
				</div>
			</div>
			<!-- end row -->
			<!--Location table Edit view-->
			<div class="row" id="edit_view">
				<div class="col-12 mb-3">
					<p><a class="go-to-table" href="@Url.Action("Index", "ClientLocation")"> <i class="fa fa-angle-left" aria-hidden="true"></i> <span>Go Back</span></a></p>
				</div>

				<div class="col-12 tabs-contant">
					<div class="">
						<div class="tab round">
							<ul class="nav nav-tabs hi-tab" role="tablist">
								<li class="nav-item">
									<a class="nav-link active show" id="head-1" data-id="1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"> <span>1.</span> Info </a>
								</li>
								<li class="nav-item">
									<a class="nav-link" id="head-2" data-id="2" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false"><span>2.</span> Address </a>
								</li>
								<li class="nav-item">
									<a class="nav-link" id="head-3" data-id="3" data-toggle="tab" href="#tab-3" role="tab" aria-controls="tab-3" aria-selected="false"> <span>3.</span> Contact Person </a>
								</li>
							</ul>
						</div>
						<div class="card card-statistics">
							<div class="card-body">
								<div class="tab round">
									<div class="tab-content">
										<!--tab 1-->
										<div class="tab-pane fade active show" id="tab-1" role="tabpanel" aria-labelledby="head-1">
											<!--row 1-->
											<div class="row">

												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ClientLocationName, new { htmlAttributes = new { @placeholder = "Enter Location Name" } })
														@Html.LabelFor(m => m.ClientLocationName, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.NumberOfSeats, new { htmlAttributes = new { @placeholder = "Number of Seats" } })
														@Html.LabelFor(m => m.NumberOfSeats, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Email, new { htmlAttributes = new { type = "email", @placeholder = "text@abc.com" } })
														@Html.LabelFor(m => m.Email, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Fax, new { htmlAttributes = new { @placeholder = "12223333333", @class = "text-uppercase" } })
														@Html.LabelFor(m => m.Fax, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
										<!--tab 2-->
										<div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="head-2">
											<!--row 1-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Address, new { htmlAttributes = new { @placeholder = "Flat:no, street Name" } })
														@Html.LabelFor(m => m.Address, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.City, new { htmlAttributes = new { @placeholder = "City name" } })
														@Html.LabelFor(m => m.City, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.State, new { htmlAttributes = new { @placeholder = "State name" } })
														@Html.LabelFor(m => m.State, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Country, new { htmlAttributes = new { @placeholder = "Country name" } })
														@Html.LabelFor(m => m.Country, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
											<!--row 2-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.Pincode, new { htmlAttributes = new { @placeholder = "000000", @maxlength = "6" } })
														@Html.LabelFor(m => m.Pincode, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
										<!--tab 3-->
										<div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby="head-3">
											<!--row 1-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ContactPersonName, new { htmlAttributes = new { @placeholder = "Enter Contact Name" } })
														@Html.LabelFor(m => m.ContactPersonName, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ContactPersonPAN, new { htmlAttributes = new { @placeholder = "ABCDE1234F", @class = "text-uppercase" } })
														@Html.LabelFor(m => m.ContactPersonPAN, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ContactPersonAadhaar, new { htmlAttributes = new { @placeholder = "111122223333", @class = "text-uppercase" } })
														@Html.LabelFor(m => m.ContactPersonAadhaar, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card card-statistics">
							<div class="card-body">
								<div class="row hi-btn-event">
									<div class="col-12">
										@Html.HiddenFor(model => model.ClientLocationID)
										<a href="javascript:void(0);" onclick="tabNavigation(0);" class="btn btn-primary text-uppercase tab-back-btn">Back</a>
										<a href="javascript:void(0);" onclick="tabNavigation(1);" class="btn btn-primary text-uppercase tab-next-btn float-right">Next</a>
										<input href="javascript:void(0);" type="submit" class="btn btn-success text-uppercase tab-submit float-right" value="Submit" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}