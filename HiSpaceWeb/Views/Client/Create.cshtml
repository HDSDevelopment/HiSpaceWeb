													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ClientMaster.Description, new { htmlAttributes = new { @placeholder = "Enter your text here ..." } })
														@Html.LabelFor(m => m.ClientMaster.Description, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
											</div>
										</div>
										<!--tab 2-->
										<div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="head-2">
											<!--row 1-->
											<div class="row">
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ClientMaster.Address, new { htmlAttributes = new { @placeholder = "Flat:no, street Name" } })
														@Html.LabelFor(m => m.ClientMaster.Address, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														@Html.EditorFor(m => m.ClientMaster.City, new { htmlAttributes = new { @placeholder = "City name" } })
														@Html.LabelFor(m => m.ClientMaster.City, new { @class = "control-label" })
														<i class="bar"></i>
													</div>
												</div>
												<div class="col-lg-3 col-md-6 col-sm-6 col-12">
