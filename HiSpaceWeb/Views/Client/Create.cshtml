											<div class="row align-items-center">
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">Registration Certificate</p>
														@Html.EditorFor(m => m.RCCopy, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">PAN</p>
														@Html.EditorFor(m => m.PANCopy, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">GST</p>
														@Html.EditorFor(m => m.GSTCopy, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
											</div>
											<!--row 2-->
											<div class="row align-items-center">
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">Membership Agreement</p>
														@Html.EditorFor(m => m.MembershipAgreementCopy, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">Primay Contact PAN</p>
														@Html.EditorFor(m => m.ContactPersonPAN, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">Primary Contact Aadhar</p>
														@Html.EditorFor(m => m.ContactPersonAadhaar, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
											</div>
											<!--row 3-->
											<div class="row align-items-center">
												<div class="col-lg-4 col-md-6 col-sm-6 col-12">
													<div class="form-group">
														<p class="label-head mb-10">Client Logo</p>
														@Html.EditorFor(m => m.Logo, new { accept = "image/*", @class = "form-control-file" })
													</div>
												</div>
											</div>
											<!--row 4-->
											<div class="row align-items-center">
												<div class="col-lg-12 col-md-12 col-sm-12 col-12">
													<div class="checkbox mt-20">
														<label>
															<input id="terms" type="checkbox" /><i class="helper"></i>i agree to the <a href="" data-toggle="modal" data-target="#largeModal" class="primary-text-color text-underline"><u>terms and conditions</u></a>
														</label>
													</div>
												</div>
												<div class="col-lg-3 col-md-3 col-sm-12 col-12">
													<div class="form-group mt-10">
														<div class="checkbox checbox-switch switch-primary mt-10">
															<label class="p-0">
																@Html.CheckBoxFor(m => m.ClientMaster.Active, new { @checked = "checked" })
																<span></span>
																Activate
															</label>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card card-statistics">
							<div class="card-body">
								<div class="row hi-btn-event">
									<div class="col-12">
										<a href="javascript:void(0);" onclick="tabNavigation(0);" class="btn btn-primary text-uppercase tab-back-btn">Back</a>
										<a href="javascript:void(0);" onclick="tabNavigation(1);" class="btn btn-primary text-uppercase tab-next-btn float-right">Next</a>
										<input href="javascript:void(0);" onclick="tabNavigation(2);" type="submit" class="btn btn-success text-uppercase tab-submit float-right bmw-submit" value="Submit" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}

