@model IEnumerable<HiSpaceModels.FacilityAddOn>

@{
    ViewBag.Title = "Add-Ons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-20">
                <!-- begin page title -->
                <div class="d-block d-sm-flex flex-nowrap align-items-center">
                    <div class="page-title mb-2 mb-sm-0">
                        <h1>Add-Ons<span class="action-text"></span></h1>
                    </div>
                    <div class="ml-auto d-flex align-items-center">
                        <nav>
                            <ol class="breadcrumb p-0 m-b-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
                                </li>
                                <li class="breadcrumb-item active text-primary" aria-current="page">Add-Ons</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end page title -->
            </div>
        </div>
        <!-- end row -->
        <!-- begin row -->
        <!--Client table view-->
        <div class="row" id="table_view">
            <div class="col-lg-12">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="datatable-wrapper table-responsive">
                            @*<a href="@Url.Action( "Create","Member")">
                                    <div id="show_add_view" class="add-new tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Click to add">
                                        <i class="fa fa-plus"></i>
                                    </div>
                                </a>*@
                            <table id="memberTable" class="display compact table table-striped mdtable">
                                <thead>
                                    <tr>
                                        <th>Add-on Name</th>
                                        <th>Actual Cost</th>
                                        <th>Quantity</th>
                                        <th>Discount Percent</th>
                                        <th>Include In Invoice</th>     
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {


									<tr>										
											<td>
												@Html.DisplayFor(modelItem => item.AddOnName)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.ActualCost)
											</td>
										
										<td>
											@Html.DisplayFor(modelItem => item.Quantity)
										</td>
										<td>
											@Html.DisplayFor(modelItem => item.DiscountPercent)
										</td>
										<td>
											@Html.CheckBoxFor(modelItem => item.IsIncludeInInvoice)
										</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>