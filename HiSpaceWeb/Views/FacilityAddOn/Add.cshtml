@model HiSpaceModels.FacilityAddOn

@{
    ViewBag.Title = "Add-Ons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-10">
                <!-- begin page title -->
                <div class="d-block d-sm-flex flex-nowrap align-items-center">
                    <div class="page-title mb-2 mb-sm-0">
                        <h1>Add-On <span class="action-text"> - Create</span></h1>
                    </div>
                    <div class="ml-auto d-flex align-items-center">
                        <nav>
                            <ol class="breadcrumb p-0 m-b-0">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action( "Index","Home")"><i class="ti ti-home"></i></a>
                                </li>
                                <li class="breadcrumb-item active text-primary" aria-current="page">Holiday</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end page title -->
            </div>
        </div>
        <!-- end row -->

        @using (Html.BeginForm("Add", "FacilityAddOn", FormMethod.Post, new { id = "", @class = "md-form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row" id="add_view">
                <div class="col-12 mb-3">
                    <p><a href="@Url.Action( "Index","Holiday")" class="go-to-table"> <i class="fa fa-angle-left" aria-hidden="true"></i> <span>Go Back</span></a></p>
                </div>

                <div class="col-12 tabs-contant">
                    <div class="">
                        <div class="tab round">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active show" id="head-1" data-id="1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"> <span>1.</span> Information </a>
                                </li>
                            </ul>
                        </div>                        
                        <div class="card card-statistics">
                            <div class="card-body">
                                <div class="tab round">
                                    <div class="tab-content">
                                        <!--tab 1-->
                                        <div class="tab-pane fade active show" id="tab-1" role="tabpanel" aria-labelledby="head-1">

                                            <!--row 1-->
                                            <div class="row">
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.MemberBookingSpaceID, new { htmlAttributes = new { @placeholder = "Add-On Name", @class = "" } })        
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.AddOnName, new { htmlAttributes = new { @placeholder = "Add-On Name", @class = "" } })
                                                        <label class="control-label" for="e_addonname">Add-On Name</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.ActualCost, new { htmlAttributes = new { @placeholder = "Actual Cost", @class = "" } })
                                                        <label class="control-label" for="e_actualcost">Actual Cost</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.DiscountPercent, new { htmlAttributes = new { @placeholder = "Discount Percent", @class = "" } })
                                                        <label class="control-label" for="e_discountpercent">Discount Percent</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @placeholder = "Quantity", @class = "" } })
                                                        <label class="control-label" for="e_quantity">Quantity</label>
                                                        <i class="bar"></i>
                                                    </div>
                                                </div>

                                                    <div class="col-12">
                                                        <div class="d-block d-sm-flex  align-items-center">
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" id="e_includeininvoice">
                                                                    <label class="form-check-label" for="includeininvoice">
                                                                        Include in Invoice
                                                                    </label>
                                                                </div>
                                                        </div>
                                                    </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card card-statistics">
                                    <div class="card-body">
                                        <div class="row hi-btn-event">
                                            <div class="col-12">
                                                <input href="javascript:void(0);" onclick="tabNavigation(2);" type="submit" class="btn btn-success text-uppercase tab-submit float-right" value="Submit" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>